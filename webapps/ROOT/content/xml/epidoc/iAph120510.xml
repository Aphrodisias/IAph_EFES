<ab><lb n="1"/> <w lemma="κωλύω">κωλύ<lb n="2" break="no"/>ει</w>  <w lemma="ὁ">ὁ</w> <w lemma="τόπος">τό<lb n="3" break="no"/>πος</w>  <w lemma="ὁ">τοῦ</w> <lb n="4"/> <w lemma="σίδηρος">σιδήρου</w> <lb n="5"/> <w lemma="ὁ">τὴν</w> <w lemma="δέσις">δέ<lb n="6" break="no"/>σιν</w>  ΕΠΙ <lb n="7"/>  <space quantity="3" unit="character"/>  </ab>
