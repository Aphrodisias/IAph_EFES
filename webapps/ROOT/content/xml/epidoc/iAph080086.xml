<ab><lb n="1"/><space quantity="3" unit="character"/> <w lemma="κατά">κατὰ</w> <w lemma="ὁ">τὴν</w> <persName type="attested"><name nymRef="#Ἰούλιος">Ἰουνίου</name> <name nymRef="#Μάξιμος">Μαξίμου</name></persName> <w lemma="ὁ">τοῦ</w> <w lemma="κράτιστος">κρατίσ<milestone unit="block"/>του</w> <w lemma="ταμίας">ταμίου</w> <w lemma="κρίσις">κρίσιν</w> <w lemma="ὁ">τοὺς</w> <w lemma="δύο">δύο</w> <w lemma="ἀνδριάς">ἀνδριάντ<unclear>α</unclear><milestone unit="block"/><supplied reason="lost">ς</supplied></w>  <persName type="attested"><name nymRef="#Γρύπος"><supplied reason="lost">Γρ</supplied><unclear>ύ</unclear>πος</name> <persName type="attested"><name nymRef="#Ἀρτεμίδωρος">Ἀρτεμιδώρου</name></persName></persName> <w lemma="ἀποκαθίστημι">ἀποκαθέστη<milestone unit="block"/><supplied reason="lost">σ</supplied><unclear>ε</unclear>ν</w>  </ab>
