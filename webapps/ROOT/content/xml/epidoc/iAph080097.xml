               <ab>
                  <lb n="1"/><persName type="divine" ref="#melpomene"><name><supplied reason="lost">Μελπομ</supplied><unclear>έ</unclear>νη</name></persName>
                  <lb n="2"/><persName type="divine" ref="#ourania"><name nymRef="#Οὐρανία">Οὐρ<supplied reason="lost">αν</supplied>ία</name></persName>
